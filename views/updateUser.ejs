<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <form
      action="/<%= user.id %>/update"
      method="POST"
      style="display: flex; flex-direction: column; max-width: 300px"
    >
      <input
        type="text"
        name="firstName"
        value="<%= user.firstName %>"
        required
      />
      <input
        type="text"
        name="lastName"
        value="<%= user.lastName %>"
        required
      />
      <input type="email" name="email" v alue="<%= user.email %>" required />
      <input type="number" name="age" value="<%= user.age %>" />
      <textarea name="bio" value="<%= user.bio %>"></textarea>
      <button type="submit">Update User</button>
    </form>
    <a href="/">Back to home</a>
  </body>
</html>
